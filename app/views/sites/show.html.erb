<div class="row">
	<div class="col-md-11 col-md-offset-1" >
		<h2><%= @site["official"]["NAME"] %></h2>
	</div>
</div>

<div class="row">
	<div class="col-md-7 col-md-offset-1" >
		<script type="text/javascript" src="http://www.panoramio.com/wapi/wapi.js?v=1"></script>
		<div id="photowall"></div>
		<script type="text/javascript">
		var birds = {'tag': '<%= @name%>'};
		var list_options = {'width': 600, 'height': 400};
		var widget = new panoramio.PhotoWidget('photowall', birds, list_options);
		widget.setPosition(0);
		</script>
	</div>
	<div class="col-md-4">
		<table class="table table-striped table-bordered">
			<tr>
				<td>Original Name:<br><%= @site["official"]["ORIG_NAME"] %></td>
			</tr>
			<tr>
				<td>Country:<br> <%= @site["official"]["COUNTRY"] %></td>
			</tr>
			<tr>
				<td>Status Year: <br> <%= @site["official"]["STATUS_YR"] %></td>
			</tr>
			<tr>
				<td>English Designation: <br> <%= @site["official"]["DESIG_ENG"] %></td>
			</tr>

		</table>
	</div>
</div>
