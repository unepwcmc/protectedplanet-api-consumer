<div class="row">
	<div class="col-md-12" >
		<h2><%= @site["official"]["NAME"] %></h2>
	</div>
</div>

<div class="row">
	<div class="col-md-6" >
		<script type="text/javascript" src="http://www.panoramio.com/wapi/wapi.js?v=1"></script>
		<div id="div_list_ex"></div>
		<script type="text/javascript">
		var birds = {'tag': '<%= @name%>'};
		var list_ex_options = {'width': 300, 'height': 300, 'columns': 1};
		var list_ex_widget = new panoramio.PhotoListWidget('div_list_ex', birds, list_ex_options);
		list_ex_widget.setPosition(0);
		</script>
	</div>
	<div class="col-md-6">
		<table class="table table-striped table-bordered">
			<tr>
				<td>Original Name:<br><%= @site["official"]["ORIG_NAME"] %></td>
			</tr>
			<tr>
				<td>Country:<br> <%= @site["official"]["COUNTRY"] %></td>
			</tr>
			<tr>
				<td>Status Year: <br> <%= @site["official"]["STATUS_YR"] %></td>
			</tr>
			<tr>
				<td>English Designation: <br> <%= @site["official"]["DESIG_ENG"] %></td>
			</tr>

		</table>
	</div>
</div>


